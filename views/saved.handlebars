<div class="jumbotron jumbotext text-center">
    <h1>Mongo Scraper</h1>
    <p><span class="flag" id="yellow">Colombian </span><span class="flag" id="blue">Sports </span> <span class="flag" id="red">Edition</span></p>
    <p class="flag">Saved Tracks</p>
</div>

<div class="container">
    <div class="col-md-12">
        {{#if track}}
        {{#each track}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="article-title">{{this.title}}</h4>
            </div>
            <div class="panel-body">
                
                <a href={{this.link}} target="_blank">{{this.summary}}</a>
                <br><br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal"
                    data-target="#noteModal{{this._id}}" data-id={{this._id}}>View/Add Notes</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved tracks.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each track}}
{{> notes-modal }}
{{/each}}